<%- include ("partials/header") -%>
  <h1>Home</h1>
  <p> <%=homeStartingContent%> </p>

<% posts.forEach(post=>{%>
 <h2> <%= post.title %> </h2>
 <% const length = 100; %>
    <% let postText = post.body.substring(0, Math.min(post.body.length, length));%>
     <% if(postText.length === length) postText += " ..."; %>
  <p> <%= postText %> <a href="<%= post._id%>">Read More</a> </p>
 <% }); %>
<%- include  ("partials/footer")-%>
